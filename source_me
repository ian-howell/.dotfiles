#!/bin/bash
############################
# This script downloads and sets up an environment
############################
set -x

MAIN_DIR="$HOME/.dotfiles"
ARTIFACTS_DIR="$HOME/setup_artifacts"
SRC="$MAIN_DIR/src"
BG_DIR="$MAIN_DIR/bg_images"

echo "Creating $ARTIFACTS_DIR"
mkdir -p "$ARTIFACTS_DIR"

# Order is (somewhat) important
source "$SRC/install_essentials"
source "$SRC/install_git"
source "$SRC/install_zsh"
source "$SRC/install_fzf"
source "$SRC/install_fd"
source "$SRC/install_less"
source "$SRC/remap_capslock"
source "$SRC/link_dotfiles"
source "$SRC/install_flake8"
source "$SRC/install_vim"
source "$SRC/set_theme"
source "$SRC/set_bg"

echo "========== COMPLETE =========="
echo "Artifacts from setup process are stored in $ARTIFACTS_DIR."

set +x
# vim:foldmethod=marker:foldlevel=0:foldmarker====[,===]
