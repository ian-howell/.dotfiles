{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoshare": false,
  "autoupdate": true,
  "model": "github-copilot/gpt-5.2-codex",
  "keybinds": {
    "editor_open": "<leader>ctrl+e",
    "session_new": "<leader>ctrl+n",
    "session_list": "<leader>ctrl+s",
  },
  "mcp": {
    "ado": {
      "type": "local",
      "command": ["agency", "mcp", "ado", "--organization", "AzureForOperatorsIndustry"],
      "enabled": true,
    },
    "icm": {
      "type": "local",
      "command": ["agency", "mcp", "icm"],
      "enabled": true,
    },
    "kusto-dev": {
      "type": "local",
      "command": ["agency", "mcp", "kusto", "--service-uri", "https://ncdev-hub.eastus.kusto.windows.net"],
      "enabled": true,
    },
    "workiq": {
      "type": "local",
      "command": ["agency", "mcp", "workiq"],
      "enabled": true,
    },
  },
  "permission": {
    "bash": {
      "ssh": "ask",
      "az": "ask"
    }
  }
}
