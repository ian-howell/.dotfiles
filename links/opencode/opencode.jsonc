{
  "$schema": "https://opencode.ai/config.json",
  "autoshare": false,
  "autoupdate": true,
  "model": "github-copilot/claude-opus-4.6",
  "mcp": {
    "ado-msazuredev": {
      "type": "local",
      "command": ["agency", "mcp", "ado", "--organization", "msazuredev"],
      "enabled": true,
    },
    "ado-msazure": {
      "type": "local",
      "command": ["agency", "mcp", "ado", "--organization", "msazure"],
      "enabled": true,
    },
    "icm": {
      "type": "local",
      "command": ["agency", "mcp", "icm"],
      "enabled": true,
    },
    "kusto-dev": {
      "type": "local",
      "command": ["agency", "mcp", "kusto", "--service-uri", "https://ncdev-hub.eastus.kusto.windows.net"],
      "enabled": true,
    },
    "workiq": {
      "type": "local",
      // "command": ["workiq", "mcp"], // Use this if the below doesn't work
      "command": ["npx", "-y", "@microsoft/workiq", "mcp"],
      "enabled": true,
    },
  },
  "permission": {
    "bash": {
      "ssh": "ask",
      "az": "ask"
    }
  }
}
