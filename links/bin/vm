#!/bin/bash

main() {
  az_login

  case "$1" in
  create)
    create_vm
    ;;
  delete)
    delete_vm
    ;;
  status)
    vm_status
    ;;
  start)
    start_vm
    ;;
  stop)
    stop_vm
    ;;
  help | *)
    echo "Usage: $0 {create|delete|status|start|stop|help}"
    echo "  ğŸ› ï¸  create - Create the VM and configure NSG rules"
    echo "  ğŸ—‘ï¸  delete - Delete the VM and associated resources"
    echo "  ğŸ“Š  status - Show the current status of the VM"
    echo "  â–¶ï¸  start  - Start the VM if it is stopped"
    echo "  â¹ï¸  stop   - Stop the VM if it is running"
    echo "  â„¹ï¸  help   - Show this help message"
    ;;
  esac
}

az_login() {
  if ! az account show >/dev/null 2>&1; then
    log "ğŸ” Logging into Azure..."
    az login
  fi
}

create_vm() {
  ensure_resource_group

  log "ğŸš€ Creating the VM..."
  az vm create \
    --resource-group burrow_group \
    --name burrow \
    --image Ubuntu2404 \
    --size Standard_D4s_v3 \
    --admin-username ian \
    --ssh-key-values ~/.ssh/id_ed25519.pub \
    --public-ip-address-dns-name burrow \
    --subscription "Visual Studio Enterprise Subscription" \
    --security-type TrustedLaunch \
    --output table

  add_ssh_config

  open_ports

  setup_vm

  log "âœ… VM created successfully!"
}

ensure_resource_group() {
  if ! az group show --name burrow_group >/dev/null 2>&1; then
    log "ğŸ—ï¸ Creating resource group 'burrow_group'..."
    az group create --name burrow_group --location eastus
  fi
}

add_ssh_config() {
  local ssh_config_file="$HOME/.ssh/config"
  local ssh_known_hosts_file="$HOME/.ssh/known_hosts"
  local host_entry="
Host burrow
  HostName burrow.eastus.cloudapp.azure.com
  User ian
  IdentityFile ~/.ssh/id_ed25519
  ForwardAgent yes
"

  # Remove old host key if it exists
  if ssh-keygen -f "$ssh_known_hosts_file" -R "burrow.eastus.cloudapp.azure.com" >/dev/null 2>&1; then
    log "ğŸ—‘ï¸ Removed old SSH host key for 'burrow'."
  fi

  # Add the host key to known_hosts
  log "ğŸ”‘ Adding SSH host key for 'burrow'..."
  ssh-keyscan -H burrow.eastus.cloudapp.azure.com >>"$ssh_known_hosts_file" 2>/dev/null

  # Add SSH configuration if not already present
  if ! grep -q "Host burrow" "$ssh_config_file" 2>/dev/null; then
    log "ğŸ› ï¸ Adding SSH configuration for 'burrow'..."
    log "$host_entry" >>"$ssh_config_file"
    log "âœ… SSH configuration added."
  else
    log "â„¹ï¸ SSH configuration for 'burrow' already exists."
  fi
}

open_ports() {
  log "ğŸ”“ Opening ports in the NSG..."
  # NOTE: 22 is already open by default
  # create_nsg_rule burrow_group burrowNSG AllowSSH 1000 22
  create_nsg_rule burrow_group burrowNSG AllowHTTP 1010 80
  create_nsg_rule burrow_group burrowNSG AllowHTTPS 1020 443
}

create_nsg_rule() {
  local resource_group=$1
  local nsg_name=$2
  local rule_name=$3
  local priority=$4
  local port=$5

  log "ğŸ”’ Creating NSG rule: $rule_name with priority $priority for port $port..."
  az network nsg rule create \
    --resource-group "$resource_group" \
    --nsg-name "$nsg_name" \
    --name "$rule_name" \
    --priority "$priority" \
    --destination-port-ranges "$port" \
    --access Allow \
    --protocol Tcp \
    --direction Inbound \
    --output table
}

setup_vm() {
  log "ğŸ”§ Setting up the VM..."
  ssh burrow <<'EOF'
        ssh-keyscan -t ed25519 github.com >> ~/.ssh/known_hosts 2>/dev/null
        sudo apt update && sudo apt install -y git
        git clone --recurse-submodules https://github.com/ian-howell/.dotfiles.git $HOME/.dotfiles
        cd $HOME/.dotfiles
        ./setup.sh | tee $HOME/setup.log
EOF
}

delete_vm() {
  log "ğŸ—‘ï¸ Deleting the VM..."
  az vm delete --resource-group burrow_group --name burrow --yes --no-wait

  log "ğŸ—‘ï¸ Disassociating the public IP address..."
  az network nic update \
    --resource-group burrow_group \
    --name burrowVMNic \
    --remove ipConfigurations[0].publicIpAddress \
    --output none

  log "ğŸ—‘ï¸ Deleting the public IP address..."
  az network public-ip delete \
    --resource-group burrow_group \
    --name burrowPublicIP \
    --output table

  log "âœ… VM deletion complete."
}

vm_status() {
  log "ğŸ“Š Checking VM status..."
  az vm get-instance-view \
    --resource-group burrow_group \
    --name burrow \
    --subscription "Visual Studio Enterprise Subscription" \
    --query "instanceView.statuses[?starts_with(code, 'PowerState/')].displayStatus" \
    --output table
}

start_vm() {
  log "â–¶ï¸ Starting the VM..."
  az vm start \
    --resource-group burrow_group \
    --name burrow \
    --subscription "Visual Studio Enterprise Subscription"
}

stop_vm() {
  log "â¹ï¸ Stopping the VM..."
  az vm stop \
    --resource-group burrow_group \
    --name burrow \
    --subscription "Visual Studio Enterprise Subscription"
}

# Logs a message with a timestamp and a vertical separator.
# The timestamp is displayed in magenta.
#
# Example:
#   log "ğŸ” Logging into Azure..."
#   Output: 2023-10-05 14:23:45 â”‚ ğŸ” Logging into Azure...
log() {
  echo -e "\033[35m$(date '+%Y-%m-%d %H:%M:%S')\033[0m â”‚ $*"
}

main "$@"
