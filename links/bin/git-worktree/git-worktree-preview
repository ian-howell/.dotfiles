#!/usr/bin/env bash
# Preview script for worktrees - shows recent commits and status

path="$1"

if [ -d "$path" ]; then
    echo "=== Worktree: $path ==="
    echo ""
    git -C "$path" log --oneline --color=always -n 10 2>/dev/null || echo "No git history"
    echo ""
    echo "=== Status ==="
    git -C "$path" status -sb 2>/dev/null || echo "No git status"
fi
